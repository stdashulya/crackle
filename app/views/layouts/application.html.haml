<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
%html
  %head
    %title Crackle
    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
%body
  %header.navbar.navbar-inverse.navbar-fixed-top
    .container
      .collapse.navbar-collapse.navbar-ex1-collapse
        %ul.nav.navbar-nav
          %li= link_to "Github project", "https://github.com/stdashulya/crackle"
          %li= link_to "Users", users_path
          - if user_signed_in?
            %li= link_to "Edit profile", edit_registration_path(current_user)
        %ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            %li= link_to "Cancel my account", registration_path(current_user), method: :delete
            %li= link_to "Log out", destroy_session_path(current_user), method: :delete
          - else
            %li= link_to "Sign in", new_user_session_path
            %li= link_to "Sign up", new_user_registration_path
  #main.container
    .row
      .col-md-3
      .col-md-6
        = yield
      .col-md-3
